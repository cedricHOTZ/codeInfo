{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

    <style>
    /* suppression des marges */
     .container-fluid { 
       padding: 0;
       margin:0;
       }
        /* container header */
       .cont{
         background-color:black;
        clip-path: polygon(0 0, 99% 0, 100% 100%, 0 85%);

       }
       
      .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        user-select: none;
      }
       main.px-3{
           margin-top:7%;
           margin-bottom:7%;
       }
       nav a{
           color:white !important;
       }
       /* Bouton header */
       .boutton-header{
    transition: all .5s ease;
    color: #fff;
    text-decoration:none;
    border: 2px solid white;
    font-family:'Montserrat', sans-serif;
    text-transform: uppercase;
    text-align: center;
    line-height: 1;
    font-size: 17px;
    background-color : transparent;
    padding: 10px;
    outline: none;
    border-radius: 4px;
    list-style-type:none;
       }
      

     .boutton-header:hover {
    color: #001F3F;
    background-color: #fff;
}
      @media (min-width: 768px) {
        .bd-placeholder-img-lg {
          font-size: 3.5rem;
        }
      }
    </style>
    <div class="d-flex h-100 text-center text-white cont">
<div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
  <header class="mb-auto">
    <div>
      <h3 class="float-md-start mb-0">CodeInfo</h3>
      <nav class="nav nav-masthead justify-content-left float-md-start">
        <a class="nav-link active" aria-current="page" href="#">Home</a>
        <a class="nav-link" href="#">Features</a>
        <a class="nav-link" href="#">Contact</a>
      </nav>
       <nav class="nav nav-masthead justify-content-right float-md-end">
        <a class="nav-link active" aria-current="page" href="#">Home</a>
        <a class="nav-link" href="#">Features</a>
        <a class="nav-link" href="#">Contact</a>
      </nav>
    </div>
  </header>

  <main class="px-3">
    <h1>Code info</h1>
    <p class="lead">Vous trouverez principalement des articles sur symfony et flutter</p>
    <p class="lead">
      <a href="#" class="boutton-header">Partager un article</a>
    </p>
  </main>
  </div>
{% endblock %}
